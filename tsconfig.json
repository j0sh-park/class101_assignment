{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": [
      "dom",
      "ES6"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@pages/*": [
        "./pages/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@resources/*": [
        "./resources/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
